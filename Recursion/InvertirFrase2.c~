#include <stdio.h>

void InvierteFrase (char Cadena1 [200], char Cadena2 [200]);

main ()
{
  char Frase [200], Invertida [200];
  printf ("Dame una frase: ");
  gets (Frase);
  InvierteFrase (Frase, Invertida);
  printf ("\n");
}

void InvierteFrase (char Cadena1 [200], char Cadena2 [200])
{
  if (*Cadena != '\0')
    {
      InvierteFrase (Cadena + 1);
      printf ("%c", *Cadena);
    }
}
